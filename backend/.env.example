# Discord OAuth2 credentials
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Discord Bot Token
# Get this from https://discord.com/developers/applications -> Bot -> Token
DISCORD_BOT_TOKEN=your_bot_token

# Access Control
# Only users in this guild with the specified role can use the app
# Get Guild ID: Right-click server name -> Copy Server ID (Developer Mode required)
# Get Role ID: Server Settings -> Roles -> Right-click role -> Copy Role ID
ALLOWED_GUILD_ID=your_guild_id
ALLOWED_ROLE_ID=your_role_id

# Session
SESSION_SECRET=your_session_secret

# Server
PORT=3000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173
